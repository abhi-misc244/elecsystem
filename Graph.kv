<GraphNode>
    size: 50,50
    canvas:
        Color:
            rgb: (self.r,1,1)
        Rectangle:
            pos: self.pos
            size: self.size
            source: self.node_shape

    Label:
        id: node_label
        text: "New Node"
        pos: root.x, root.y+10
        font_size: 20
        color: 1,0,0,1
