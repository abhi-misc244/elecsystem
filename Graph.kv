<GraphNode>
    size: 50,50
    canvas:
        Color:
            rgb: (self.r,1,1)
        Rectangle:
            pos: self.pos
            size: self.size
            source: self.node_shape

    Label:
        id: node_label
        text: "New Node"
        pos: root.x, root.y+10
        font_size: 20
        color: 1,0,0,1

<GraphEdge>
    edge_label: edge_label.__self__
    pos: root.edge_x, root.edge_y
    canvas:
        Color:
            rgb: (1,1,1)
        Line:
            points: root.points
            width: 3
    Label:
        id: edge_label
        text: root.edge_name
        pos: root.edge_x, root.edge_y
