<CustomTab>:
    dropdown: dropdown.__self__
    size_hint: .5, .5
    pos_hint: {'center_x': .5, 'center_y': .5}
    do_default_tab: False

    TabbedPanelItem:
        text: 'Naming tab'
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: .6
            BoxLayout:
                orientation: 'horizontal'
                Label:
                    text: 'Enter Node Name Here'
                    size_hint_y: 1
                TextInput:
                    size_hint_y: 1
                    id: node_name

            BoxLayout:
                orientation: 'horizontal'
                Label:
                    text: 'Select Node Type'
                    size_hint_y: 1
                Button:
                    id: btn
                    text: 'Press'
                    on_release: dropdown.open(self)
                    size_hint_y: 1
                    height: '48dp'
                DropDown:
                    id: dropdown
                    on_select: btn.text = '{}'.format(args[1])
                    on_parent: dropdown.dismiss()
                    Button:
                        text: 'Load'
                        id: load_btn
                        size_hint_y: None
                        height: '48dp'
                        on_release: dropdown.select('Load')
                    Button:
                        text: 'DB'
                        id: db_btn
                        size_hint_y: None
                        height: '48dp'
                        on_release: dropdown.select('DB')
                    Button:
                        text: 'Generator'
                        id: genrator_btn
                        size_hint_y: None
                        height: '48dp'
                        on_release: dropdown.select('Generator')
                    Button:
                        text: 'Grid'
                        id: grid_btn
                        size_hint_y: None
                        height: '48dp'
                        on_release: dropdown.select('Grid')


    TabbedPanelItem:
        text: 'Size Tab'
        BoxLayout:
            orientation: 'vertical'
            BoxLayout:
                orientation: 'horizontal'
                Label:
                    text: btn.text + ' Size in kW'
                    size_hint_y: .5
                TextInput:
                    id: nodesize_ti
                    size_hint_y: .5
            BoxLayout:
                orientation: 'horizontal'
                Label:
                    text: 'Short Circuit impedance'
                    size_hint_y: .5
                TextInput:
                    id: nodeimp_ti
                    size_hint_y: .5
